    <tags>LaTeX Documentation Colorization XML comments &lt;code&gt; Sandcastle SHFB</tags>
    <repository type="Git" url="https://github.com/Novacta/documentation-shfb-tools" />
    <dependencies>
      <dependency id="Novacta.Transactions.IO" version="1.0.0" />
    </dependencies>
  </metadata>
  <files>
